{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cover.com/series/schema.json",
  "title": "Series",
  "description": "A series of comic books under the same title",
	"type": "object",
	"properties": {
		"name": { 
			"description": "Name (title) of the series",
			"type": "string"
		},
		"date": {
			"description": "Date series was created/began",
			"type": "string",
			"format": "date"
		},
		"creativeTeam": {
			"description": "People who created and worked on the series (creators, artists, writers, etc)",
			"type":"array",
			"items": {
				"$ref": "http://cover.com/person/schema.json",
				"minLength": 0
			},
			"uniqueItems": true
		},
		"characters": {
			"description": "Characters featured in the series",
			"type":"array",
			"items": {
				"$ref": "http://cover.com/character/schema.json",
				"minLength": 0
			},
			"uniqueItems": true
		},
		"description": {
			"description": "Description of the series",
			"type":"string"
		},
		"stories": {
			"description": "Story arcs featured in the series",
			"type":"array",
			"items": {
				"$ref": "http://cover.com/story/schema.json",
				"minLength": 0
			},
			"uniqueItems": true
		},
		"notes": {
			"description": "Jen & Dan's notes about the series",
			"type":"string"
		}
	},
	"required": ["name"]
}